# MongoDB Configuration
MONGO_PASSWORD=mongopassword
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=mongopassword

# MongoDB URIs for each service
MONGO_URI_AUTH=mongodb://admin:mongopassword@mongodb-auth:27017/har_auth?authSource=admin
MONGO_URI_COURSES=mongodb://admin:mongopassword@mongodb-courses:27017/har_courses?authSource=admin
MONGO_URI_PAYMENTS=mongodb://admin:mongopassword@mongodb-payments:27017/har_payments?authSource=admin

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://redis:6379

# JWT Configuration
JWT_SECRET=change_this_in_production_use_strong_secret_key
JWT_REFRESH_SECRET=change_this_too_in_production_use_another_strong_key
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d

# Service Secrets (for inter-service communication)
SERVICE_SECRET=service-secret-key-change-in-production

# API Gateway Configuration
PORT=8000
NODE_ENV=development
CORS_ORIGIN=*
API_RATE_LIMIT=100
API_RATE_WINDOW=3600

# Auth Service Configuration
AUTH_SERVICE_PORT=3001
AUTH_SERVICE_URL=http://auth-service:3001
AUTH_RATE_LIMIT=5
AUTH_RATE_WINDOW=600

# Course Service Configuration
COURSE_SERVICE_PORT=3002
COURSE_SERVICE_URL=http://course-service:3002
COURSE_CACHE_TTL=1800

# Payment Service Configuration
PAYMENT_SERVICE_PORT=3003
PAYMENT_SERVICE_URL=http://payment-service:3003
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PRICE_ID_BASIC=price_basic_id
STRIPE_PRICE_ID_PRO=price_pro_id
STRIPE_PRICE_ID_ENTERPRISE=price_enterprise_id

# AI Service Configuration
AI_SERVICE_PORT=5000
AI_SERVICE_URL=http://ai-service:5000
OPENAI_API_KEY=your_openai_api_key_here
CHROMA_DB_PATH=/data/chromadb
AI_RATE_LIMIT=20
AI_RATE_WINDOW=3600
DEBUG=true

# Frontend Configuration
FRONTEND_PORT=3000
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000

# Logging Configuration
LOG_LEVEL=debug
LOG_FORMAT=json

# Email Configuration (optional - for password reset)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_SECURE=false
EMAIL_FROM=noreply@haracademy.com

# Storage Configuration (optional - for S3 uploads)
S3_BUCKET=har-academy-uploads
S3_REGION=eu-west-3
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Monitoring Configuration (optional)
SENTRY_DSN=your_sentry_dsn
PROMETHEUS_PORT=9090
GRAFANA_PORT=3500

# Feature Flags
ENABLE_OAUTH=false
ENABLE_STRIPE=true
ENABLE_AI_FEATURES=true
MAINTENANCE_MODE=false
